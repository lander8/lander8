<script>
	var current_website = "<%= current_user.websites.present? ? current_user.websites.first.name : 'null' %>";
</script>
<div class="row">
	<div class="container">
		<div class="row">
			<h1 class="col-xs-12">Analytics Dashboard</h1>
		</div>
		<ul class="nav nav-tabs sites">
			<% current_user.websites.each_with_index do |website, index| %>
				<li role="presentation" <%= index == 0 ? 'class=active' : '' %>><a href="#"><%= website.name %></a></li>
			<% end %>
		</ul>
		<div class="row">
			<div class="col-xs-12">
				<div class="col-xs-12 data-container">
					<div class="col-xs-3 navigation-left">
						<ul class="nav nav-pills nav-stacked">
							<li role="presentation" id="salesChartShow" class="active"><a href="#">Sales</a></li>
							<li role="presentation" id="siteTrafficChartShow"><a href="#">Site Traffic</a></li>
							<li role="presentation" id="conversionChartShow"><a href="#">Conversions</a></li>
						  <li role="presentation"><a href="#">Social Media</a></li>
						</ul>
					</div>
					<div class="col-xs-9 col-xs-offset-3">
						<div class="row">
							<div class="chart-nav sales active"><%= render 'analytics/charts/sales' %></div>
							<div class="chart-nav site-traffic"><%= render 'analytics/charts/site_traffic' %></div>
							<div class="chart-nav conversions"><%= render 'analytics/charts/conversions' %></div>
							<div class="col-xs-12 chart-12" id="salesChart">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>